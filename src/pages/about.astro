---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import Promobar from '../components/Promobar.astro';
---

<Layout>
    <Promobar />
    <Header/>
    <main>
        <HeroSection
            title="About Us",
            highlightText="Us",
            description=""
        />
        <section class="py-16">
            <div class="container-custom">
                <div class="grid md:grid-cols-2 gap-12 items-center mb-24">
                    <div>
                        <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-800 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
                        Our Mission
                        </span>
                        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Helping Businesses</h2>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">
                            At SnapSites we have a goal to provide businesses with professional websites and fully take care of their website needs. By working closely with our clients, we provide fully custom websites and welcome 
                            constant updates. We fully take care of hosting and managing the website, so you don't have to. Our websites are made with full SEO allowing people to find you easier on Google.
                        </p>
                    </div>
                    <div class="rounded-lg overflow-hidden shadow-xl">
                        <img src="/broll-ipad.jpg" class="w-full h-100 object-cover"/>
                    </div>
                </div>

    </main>
    <Footer />
</Layout>