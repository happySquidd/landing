---
const plans = [
  {
    name: "Basic",
    price: 99,
    description: "For basic website needs",
    features: [
      "One page website",
      "Custom business domain",
      "Secure hosting",
      "Monthly analytics",
      "24/7 email support",
      "Unlimited minor changes"
    ],
    cta: "Start Your Plan",
    popular: false,
    color: "secondary",
    link: "/"
  },
  {
    name: "Standard",
    price: 149,
    description: "Ideal for growing businesses",
    features: [
      "Multi page website",
      "Custom business domain",
      "Secure hosting",
      "Monthly analytics",
      "24/7 email support",
      "Unlimited minor changes",
      "Up to 4 major changes / month",
      "Contact form for leads",
      "SEO integrated"
    ],
    cta: "Start Your Plan",
    popular: true,
    color: "blue",
    link: "/"
  },
  {
    name: "Professional",
    price: 299,
    description: "For large businesses",
    features: [
      "Multi page website",
      "Custom business domain",
      "Secure hosting",
      "Monthly analytics",
      "24/7 priority email support",
      "Unlimited minor changes",
      "Up to 12 major changes / month",
      "Contact form for leads",
      "SEO integrated",
      "Social media links",
      "Advanced security and compliance"
    ],
    cta: "Start Your Plan",
    popular: false,
    color: "accent",
    link: "/"
  }
];
---

<section id="pricing" class="section ">
  <div class="container-custom">
    <div class="text-center max-w-4xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-accent-100 dark:bg-accent-900 text-accent-600 dark:text-accent-300 font-medium text-sm mb-4">
        Pricing Plans
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Simple, Transparent Pricing</h2>
      <p class="text-gray-600 dark:text-gray-300">
        Choose the plan that works best for your business. <s>All plans include one-time $199 onboarding fee</s>
      </p>
      <p><b>End of Summer Deal: No Onboarding Fee This Month Only</b></p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {plans.map((plan, index) => (
        <div 
          class={`card p-6 border flex flex-col ${plan.popular ? `border-${plan.color}-500 dark:border-gray-400` : 'border-gray-200 dark:border-gray-700'} slide-up relative`}
          style={`animation-delay: ${index * 150}ms`}
        >
          {plan.popular && (
            <div class={`absolute top-0 right-0 bg-${plan.color}-500 text-white px-4 py-1 text-sm font-medium rounded-bl-lg rounded-tr-lg`}>
              Most Popular
            </div>
          )}
          
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">{plan.name}</h3>
          <div class="mb-4">
            <span class="text-4xl font-bold text-gray-900 dark:text-white">${plan.price}</span>
            <span class="text-gray-500 dark:text-gray-400">/month</span>
          </div>
          <p class="text-gray-600 dark:text-gray-300 mb-6">{plan.description}</p>
          
          <ul class="space-y-3 mb-8">
            {plan.features.map(feature => (
              <li class="flex items-start">
                <svg class={`w-5 h-5 text-${plan.color}-500 mr-2 shrink-0 mt-0.5`} fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-600 dark:text-gray-300">{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href={plan.link}
            class={`w-full btn mt-auto btn-outline`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
    <div class="mt-12 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-2">Have questions? Feel free to reach out</p>
      <a href="/contact" class="text-primary-600 dark:text-primary-400 font-medium hover:underline">Contact us</a>
    </div>
    <!-- <div class="mt-12 text-center">
      <p class="text-gray-300 mb-2">All plans include one month free hosting, with the $199 onboarding fee</p>
    </div> -->
  </div>
</section>
